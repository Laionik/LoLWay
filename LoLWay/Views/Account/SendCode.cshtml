@model LoLWay.Models.SendCodeViewModel
<head>
    <title>Kod | LoLWay</title>
</head>
<!--Title-->
<section id="title" class="emerald">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <h1>Wyślij kod</h1>
            </div>
        </div>
    </div>
</section>
<!--/Title-->
<!--Forms-->
<section id="contact-page" class="container">
    <div class="row">
        <div class="col-sm-4">
            <section id="sendForm">
               @using (Html.BeginForm("SendCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
               {
                @Html.AntiForgeryToken()
                @Html.Hidden("rememberMe", @Model.RememberMe)
                <h4>Wyślij kod weryfikacyjny</h4>
                <hr />
                <div class="row">
                    <div class="col-md-8">
                       Wybierz dostawcę dwuetapowej weryfkiacji:
                        @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers)
                        <input type="submit" value="Wyślij" class="btn btn-default" />
                    </div>
                </div>
               }
            </section>
        </div>
    </div>
</section>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<!--/Forms-->