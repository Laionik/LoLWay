@model LoLWay.Models.RegisterViewModel
<head>
    <title>Rejestracja | LoLWay</title>
</head>
<!--Title-->
<section id="title" class="emerald">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <h1>Zarejestruj się</h1>
                <p>Utwórz nowe konto aby w pełni wykorzystać możliwości LoLWay</p>
            </div>
            <div class="col-sm-6">
                <ul class="breadcrumb pull-right">
                    <li>@Html.ActionLink("Strona główna", "Index", "Home")</li>
                    <li class="active">Rejestracja</li>
                </ul>
            </div>
        </div>
    </div>
</section>
<!--/Title-->

<!--Forms-->
<section id="contact-page" class="container">
    <div class="row">
        <div class="col-sm-6">
            <section id="registerForm">
              @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
              {
                @Html.AntiForgeryToken()
                <h4>Zarejestruj nowe konto</h4>
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    <label class="control-label col-md-2">E-mail</label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Hasło</label>
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Potwierdź</label>
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-default" value="Rejestruj" />
                    </div>
                </div>
              }
            </section>
        </div>
    </div>
</section>
@section Scripts {
    @Scripts.Render("~/Scripts/jqueryval")
}
<!--/Forms-->